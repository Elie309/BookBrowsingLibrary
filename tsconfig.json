{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "declarationDir": "./dist"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/tests/**/*.ts"
    ]
}